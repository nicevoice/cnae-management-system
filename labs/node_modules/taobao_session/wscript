srcdir = '.'
blddir = 'build'
VERSION = '0.1'

def set_options(opt):
        opt.tool_options('compiler_cxx')

def configure(conf):
        conf.check_tool('compiler_cxx')
        conf.check_tool('node_addon')
        conf.check(lib='iconv', libpath=['/usr/lib', '/usr/local/lib', '/usr/lib64'], uselib_store='ICONV')
        conf.check(lib='ssl', libpath=['/usr/lib', '/usr/local/lib', '/usr/lib64'], uselib_store='SSL')

def build(bld):
        obj = bld.new_task_gen('cxx', 'shlib', 'node_addon')
        obj.target = 'taosess'
        obj.source = 'session.cc'
        obj.uselib = ['ICONV', 'SSL']

